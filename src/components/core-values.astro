---
const {pretitle,title,coreValues,description}=Astro.props
---
<section class="py-16 bg-[#F1F1F1]">
  <div class=" max-w-[820px] mx-auto px-6">
    <h2 class="text-primary   text-center text-xl font-semibold mb-4">{pretitle}</h2>
    <h1 class="lg:text-6xl text-5xl  text-center font-bold mb-8">{title}</h1>
    <p class="text-xl  font-semibold  text-center mb-12">
     {description}
    </p>
    <div class="space-y-6  mx-auto">
      {coreValues.map((value:any) => (
        <div class="bg-purple bg-opacity-90 text-white py-6 px-8 rounded-[45px] shadow-md flex items-center space-x-4">
<img src={value.icon} alt="" class="w-12 h-12 object-contain"/>
          <div>
            <h3 class="text-xl font-medium ">{value.title}</h3>
            <p class="text-gray-100">{value.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>