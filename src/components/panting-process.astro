---
const {pretitle,title,description,cards}=Astro.props
---
<div class="py-24">


<div class="bg-[#223F8D] custom-container  bg-opacity-90 text-white px-8 py-16 rounded-[45px]  lg:mx-20 mx-8">
  <div class="lg:max-w-[850px] mx-auto">

<h3 class="text-secondary text-xl text-center">{pretitle}</h3>
  <h1 class="text-4xl font-bold my-4 text-center">{title}</h1>
  <p class="text-center mb-8 font-semibold">
   {description}
  </p>
  
  <div class="space-y-8">
    {cards.map((step:any,index:number) => (
      <div class="bg-black bg-opacity-[25%] py-10 px-12 relative rounded-[45px]">
        <div class="flex items-center mb-2">
          <span class="bg-secondary text-black -top-4 -left-4 absolute text-2xl font-bold rounded-full w-12 h-12 flex items-center justify-center  mr-3">
            {index +1}
          </span>
          <h2 class="text-xl font-semibold">{step.title}</h2>
        </div>
        <p class="text-lg font-medium">{step.description}</p>
      </div>
    ))}
  </div>  </div>
</div></div>