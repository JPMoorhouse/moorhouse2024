---
import DetailLayout from "@layouts/DetailLayout.astro";
---

<DetailLayout title="" description="" image="">
  <section class="bg-white dark:bg-gray-900 py-20">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center">
        <h1
          class="mb-4 tracking-tight font-extrabold text-7xl md:text-[10rem] text-primary dark:text-primary"
        >
          404
        </h1>
        <p
          class="mb-4 text-3xl tracking-tight font-bold text-gray-900 dark:text-white"
        >
          Something's missing.
        </p>
        <p class="mb-4 text-lg font-light text-gray-500 dark:text-gray-400">
          Sorry, we can't find that page. You'll find lots to explore on the
          home page.
        </p>
        <a
          href="/"
          class="inline-flex text-white bg-primary hover:bg-primary focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-2xl text-sm px-6 py-3 text-center dark:focus:ring-primary-900 my-4"
          >Back to Homepage</a
        >
      </div>
    </div>
  </section></DetailLayout
>
